  <div class='navbar-inner'>
    <div class='container'>
      <%= link_to 'Dom Postroim', root_path, :class => 'brand' %>
      <ul class='nav'>
        <% if user_signed_in? %>
          <li class='navbar-text nav pull-right'><%= current_user.username %></li>
          <li><%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to 'Зарегистрироваться как заказчик', sign_up_path(:role => 'homeowner') %></li>
          <li><%= link_to 'Зарегистрироваться как подрядчик', sign_up_path(:role => 'tradesman') %></li>
          <li><%= link_to 'Войти', new_user_session_path(current_user) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
