<h2>Войти</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.input :login, :label => 'Имя пользователя или email', :required => false, :autofocus => true %>
    <%= f.input :password, :label => 'Пароль', :required => false %>
    <%= f.input :remember_me, :label => 'Запомнить меня', :as => :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, "Войти", :class => 'btn-success' %>
<% end %>

<%= render "devise/shared/links" %>
